{
  "id": "com.onepace.watchparty",
  "version": "4.0.0",
  "name": "One Pace - WatchParty",
  "description": "One Pace - WatchParty addon with Torbox integration and official One Pace subtitles (https://onepace.net/). Features P2P torrents, premium Torbox streams, official One Pace subtitles, and OpenSubtitles fallback. Compatible with Local Files addon for automatic local content detection.",
  "behaviorHints": {
    "configurable": true,
    "configurationRequired": false,
    "adult": false,
    "p2p": true,
    "configurable": true
  },
  "config": [
    {
      "key": "torboxApiKey",
      "type": "text",
      "title": "Torbox API Key (Optional)",
      "required": false,
      "default": "",
      "options": []
    },
    {
      "key": "subtitleLanguages",
      "type": "select",
      "title": "Preferred Subtitle Languages",
      "required": false,
      "default": "en",
      "options": [
        {"value": "en", "label": "English"},
        {"value": "en,es", "label": "English + Spanish"},
        {"value": "en,fr", "label": "English + French"}, 
        {"value": "en,pt", "label": "English + Portuguese"},
        {"value": "en,de", "label": "English + German"},
        {"value": "en,it", "label": "English + Italian"},
        {"value": "en,ja", "label": "English + Japanese"},
        {"value": "all", "label": "All Available Languages"}
      ]
    },
    {
      "key": "openSubtitlesApiKey",
      "type": "text",
      "title": "OpenSubtitles API Key (Optional - for better subtitle access)",
      "required": false,
      "default": "",
      "options": []
    }
  ],

  "logo": "https://i.pinimg.com/originals/4c/46/ee/4c46ee47e0710a6d928454f68fc4ee17.png",
  "resources": [
    "catalog",
    {
      "name": "meta",
      "types": ["series"],
      "idPrefixes": ["pp"]
    },
    "stream"
  ],
  "types": ["series"],
  "catalogs": [
    {
      "type": "series",
      "id": "seriesCatalog",
      "name": "One Pace - WatchParty",
      "extra": [
        {
          "name": "search",
          "isRequired": false
        }
      ]
    }
  ]
}
